<% layout("/layouts/boilerplateuser") %>

<body>

<form action="/login" method="post" novalidate class="needs-validation offset-md-4">
    
    <h2>Proctor Pro</h2>
    <br>

    <div class="mb-3 col-md-6">
        <label for="username" class="form-label mb-2">Username</label>
        <input type="text" placeholder="" name="username" class="form-control" required>
        <div class="invalid-feedback"> Enter User Name! </div>
    </div>

    <div class="mb-5 col-md-6">
        <label for="password" class="form-label mb-2">password</label>
        <input type="password" placeholder="Enter password" name="password" class="form-control" required>
        <div class="invalid-feedback"> Enter The password! </div>
    </div>

    <button class="btn btn-success mb-3 col-md-6"> Login</button>
    
    <br>
</form>
<p class="mt-3" style="text-align: center;">Or</p>

<form action="/signup">

    <button class="btn btn-success col-md-4 offset-md-4 mt-3 mb-2">signup</button>
</form>

</body>