    <%- include("../includes/flash.ejs") %>
    <main>
        <section class="hero-section text-center">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Image Area (40%) -->
                    <div class="col-12 col-md-6 image-container d-flex justify-content-center align-items-center order-first order-md-last">
                        <img src="/images/ap-hero-dark.png" alt="Proctor Pro Hero Image" class="img-fluid">
                    </div>
                    
                    <!-- Content Area (60%) -->
                    <div class="col-12 col-md-6 hero-content d-flex flex-column justify-content-center text-center text-md-left">
                        <h1 style="font-size: 4.5rem;">Proctor Pro</h1>
                        <p style="font-size: 1.2rem;">Your ultimate AI-powered proctoring solution</p>
                        <div class="hero-buttons d-flex flex-column flex-md-row gap-3 justify-content-center justify-content-md-start">
                            <a href="/startTest/6749bdb6e94c22e8b5d4fcbd/instructions" class="btn btn-primary" style="margin-right:1.5rem ;margin-top: 1rem;">Take Demo</a>
                            <a href="/test" class="btn btn-secondary " style="margin-top: 1rem;">Create Test</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
    </main>
    
    
    
    
    <section style="background-color: #ffffff; width: 100%; padding: 3rem 0; min-height: 250px; display: flex; align-items: center;">
        <div class="container">
            <div class="row">
                <!-- Left 50% -->
                <div class="col-12 col-md-6 mb-4 mb-md-0">
                    <div class="d-flex flex-column justify-content-center align-items-center h-100">
                        <h3 class="mb-3 text-center">AI-Powered Proctoring</h3>
                        <p class="text-center">Advanced monitoring and analysis to ensure test integrity</p>
                    </div>
                </div>
                <!-- Right 50% -->
                <div class="col-12 col-md-6">
                    <div class="d-flex flex-column justify-content-center align-items-center h-100">
                        <h3 class="mb-3 text-center">Real-Time Reports</h3>
                        <p class="text-center">Instant insights and detailed analytics for better assessment</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
        <div id="carouselExample" class="carousel slide" data-ride="carousel" data-touch="true" data-interval="3000" data-pause="false">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="d-flex flex-column align-items-center justify-content-center carousel-item-content" style="background-color: #f2f2f2;">
                    <img src="/images/student_auth.png" alt="Student Authentication" class="mb-4 carousel-item-img">
                    <div class="carousel-item-text">
                        <h2 class="carousel-item-title">Student Authentication</h2>
                        <p class="carousel-item-desc">Advanced multi-factor authentication system designed to prevent student impersonations, ensuring a secure and fair testing environment.</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="d-flex flex-column align-items-center justify-content-center carousel-item-content" style="background-color:#f2f2f2; color: white;">
                    <img src="/images/ai_proctor.png" alt="Proctoring Technology" class="mb-4 carousel-item-img">
                    <div class="carousel-item-text">
                        <h2 class="carousel-item-title">Proctoring Technology</h2>
                        <p class="carousel-item-desc">AI-powered proctoring technology, enabling live, automatic, and camera surveillance to ensure secure and fair assessments.</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="d-flex flex-column align-items-center justify-content-center carousel-item-content" style="background-color:#f2f2f2; color: white;">
                    <img src="/images/secure_browser.png" alt="Secure Exam Browser" class="mb-4 carousel-item-img">
                    <div class="carousel-item-text">
                        <h2 class="carousel-item-title">Secure Exam Browser</h2>
                        <p class="carousel-item-desc">Advanced secure browser lockdown technology that blocks access to additional tabs, browsers, and external ports, ensuring exam integrity.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <style>
        /* Default styling */
        .carousel-item-content {
            height: 500px;
            padding: 50px 20px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    
        .carousel-item-img {
            max-width: 80%;
            height: auto;
            max-height: 250px;
        }
    
        .carousel-item-text {
            padding: 30px 20px;
            width: 100%;
        }
    
        .carousel-item-title {
            font-size: 2.5rem;
            color: rgb(94, 189, 132);
            font-weight: bold;
            margin-bottom: 20px;
        }
    
        .carousel-item-desc {
            max-width: 85%;
            font-size: 1.2rem;
            line-height: 1.6;
            color: #333;
            margin-left: auto;
            margin-right: auto;
        }
    
        /* Responsive adjustments */
        @media (max-width: 767px) {
            .carousel-item-content {
                height: auto;
                padding: 30px 15px;
            }
    
            .carousel-item-img {
                max-width: 100%;
                max-height: 200px;
            }
    
            .carousel-item-title {
                font-size: 1.8rem;
            }
    
            .carousel-item-desc {
                font-size: 1rem;
            }
        }
    
        @media (max-width: 480px) {
            .carousel-item-title {
                font-size: 1.6rem;
            }
    
            .carousel-item-desc {
                font-size: 0.95rem;
            }
    
            .carousel-item-img {
                max-height: 180px;
            }
        }
    </style>
       
    <section class="middleremove navbar navbar-expand-lg" style="background-color: #242e80; height: 30vh; display: flex; flex-direction: row; justify-content: space-between; align-items: center; width: 100%; padding: 0 20px; text-align: center;">
        <div style="font-size: 40px; color: white; font-weight: bold; flex: 1;">
            Try Proctor Pro today!
        </div>
        <div class="button-container" style="display: flex; gap: 10px; justify-content: center; flex: 1;">
            <button class="button-18" role="button">Take demo</button>
            <button class="button-18" role="button" onclick="window.location.href='/test'">Create a Test</button>

        </div>
    </section>
    
    <style>
        /* Add responsiveness to make the section layout better on smaller screens */
        @media (max-width: 768px) {
            .middleremove {
                height: auto;
                flex-direction: column;
                padding: 20px;
            }
    
            .button-container {
                flex-direction: column; /* Stack buttons vertically */
                gap: 10px; /* Add space between buttons */
                width: 100%; /* Make button container full width */
            }
    
            .middleremove .button-18 {
                width: 100%; /* Make each button take up full width */
                padding: 12px 20px; /* Adjust padding */
            }
        }
    </style>
    
      <section id="above-footer" class="above-footer" style="width: 100%;">
        <div class="container-middle" style="display: flex; justify-content: center; align-items: center; height: 100%; width: 100%; flex-wrap: wrap; gap: 20px; box-sizing: border-box;">
            
            <div class="section-center" style="width: 48%; padding: 0 10px; box-sizing: border-box;">
                <div class="headings" style="display: flex; justify-content: flex-start; align-items: flex-start; flex-direction: column; padding: 100px 0">
                    <h1 style="font-size: 30px; margin-bottom: 15px;">Need to hire for your company?</h1>
                    <h2 style="font-size: 50px; margin-bottom: 15px;">Use <span style="color: rgb(94, 189, 132);">Proctor Pro</span></h2>
                    <h3 style="font-size: 20px;">Better Proctoring & Better Assessment</h3>
                </div>
            </div>
    
            <div style="width: 48%; padding: 0 10px; box-sizing: border-box;">
                <div class="gapremove" style="display: flex; flex-direction: column; gap: 15px;">
                    <div style="display: flex; flex-direction: column; gap: 5px;">
                        <div style="font-weight: bold; font-size: 18px;">Different Test Types</div>
                        <div style="font-size: 16px;">Coding challenges for Developers, Communication tests for Sales and Support, etc. Not just MCQs!</div>
                    </div>
                    <div style="display: flex; flex-direction: column; gap: 5px;">
                        <div style="font-weight: bold; font-size: 18px;">Link Multiple Tests</div>
                        <div style="font-size: 16px;">Create multiple tests and link them together. So, candidates can attempt multiple tests via a single link.</div>
                    </div>
                    <div style="display: flex; flex-direction: column; gap: 5px;">
                        <div style="font-weight: bold; font-size: 18px;">Session Recordings, Plagiarism Check</div>
                        <div style="font-size: 16px;">Every click, cursor movement, etc is recorded. Answers are compared to check for plagiarism.</div>
                    </div>
                </div>
            </div>
    
        </div>
    
        <style>
            /* AResponsive styles */
            @media(min-width: 768px) {
                .headings{
                    padding-left:100px !important; 
                }
            }
            @media (max-width: 768px) {
                .container-middle {
                    flex-direction: column;
                    padding: 20px;
                }
                .section-center, .gapremove {
                    width: 100%;
                    padding: 0;
                    text-align: center;
                }
                .headings {
                    padding: 30px 0 !important;
                }
                .headings h1 {
                    font-size: 24px;
                }
                .headings h2 {
                    font-size: 36px;
                }
                .headings h3 {
                    font-size: 18px;
                }
                .gapremove div {
                    font-size: 14px;
                }
                .gapremove div div {
                    font-size: 14px;
                }
            }
    
            @media (max-width: 480px) {
                .headings {
                    padding: 30px 0;
                }
                .headings h1 {
                    font-size: 20px;
                    margin-bottom: 10px;
                }
                .headings h2 {
                    font-size: 28px;
                    margin-bottom: 10px;
                }
                .headings h3 {
                    font-size: 16px;
                }
                .gapremove div {
                    font-size: 12px;
                }
                .gapremove div div {
                    font-size: 12px;
                }
                .container-middle {
                    gap: 10px;
                }
            }
        </style>
    </section>
    
    
</main>



