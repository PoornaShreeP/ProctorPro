<% if(success && success.length){ %>

    <div class="alert alert-success alert-dismissible fade show col-md-8 mb-4 offset-md-3" role="alert" style="padding-left:2rem;">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

<%}%>

<% if(error && error.length){ %>

    <div class="alert alert-danger alert-dismissible fade show col-md-8 mb-4 offset-md-3" role="alert" style="padding-left:2rem;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

<%}%>